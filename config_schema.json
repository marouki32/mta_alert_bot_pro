{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["symbols", "timeframe", "indicators", "alerts"],
  "properties": {
    "symbols": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "timeframe": { "type": "string" },
    "indicators": {
      "type": "object",
      "required": ["rsi", "ema", "bollinger"],
      "properties": {
        "rsi": { "type": "integer", "minimum": 1 },
        "ema": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "integer", "minimum": 1 }
        },
        "bollinger": {
          "type": "object",
          "required": ["window", "std"],
          "properties": {
            "window": { "type": "integer", "minimum": 1 },
            "std":    { "type": "number",  "minimum": 0 }
          }
        }
      }
    },
    "alerts": {
      "type": "object",
      "required": ["confidence_threshold", "score_threshold"],
      "properties": {
        "confidence_threshold": { "type": "number", "minimum": 0, "maximum": 1 },
        "score_threshold":       { "type": "number" }
      }
    }
  }
}

